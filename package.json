{
  "name": "personal-finance-tracker",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "npm-run-all --parallel dev:api dev:web",
    "dev:api": "npm run dev --workspace=@finance-tracker/api",
    "dev:web": "npm run dev --workspace=@finance-tracker/web",
    "build": "npm-run-all build:api build:web",
    "build:api": "npm run build --workspace=@finance-tracker/api",
    "build:web": "npm run build --workspace=@finance-tracker/web",
    "db:start": "docker-compose up -d",
    "db:stop": "docker-compose down",
    "db:reset": "docker-compose down -v && docker-compose up -d"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
